{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "COURSE EXPLORER API",
    "description": "see api_link"
  },
  "paths": {
    "/courses": {
      "get": {
        "description": "get courses list",
        "tags": ["Courses"],
        "operationId": "getCoursesList",
        "responses": {
          "200": {
            "description": "success get courses list data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetCoursesListResponse"
                }
              }
            }
          },
          "401": {
            "description": "unauthorized user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/instructors": {
      "get": {
        "description": "get instructor list",
        "tags": ["Instructor"],
        "operationId": "getInstructorsList",
        "responses": {
          "200": {
            "description": "success get instructor list data",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetCoursesListResponse"
                }
              }
            }
          },
          "401": {
            "description": "unauthorized user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "internal server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GetCoursesListResponse": {
        "type": "object",
        "required": [
          "data",
          "message"
        ],
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GetCoursesList"
            }
          },
          "message": {
            "type": "string"
          }
        }
      },
      "GetCoursesList": {
        "type": "object",
        "required": [
          "id",
          "title",
          "description",
          "thumbnail",
          "instructor"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "thumbnail": {
            "type": "string"
          },
          "instructor": {
            "type": "object",
            "$ref": "#/components/schemas/Instructor"
          }
        }
      },
      "GetInstructorListResponse": {
        "type": "object",
        "required": ["data", "message"],
        "properties": {
          "message": {
            "type": "string"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Instructor"
            }
          }
        }
      },
      "Instructor": {
        "type": "object",
        "required": [
          "id",
          "name",
          "role",
          "companyName",
          "profilePictureURL"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "role": {
            "type": "string"
          },
          "companyName": {
            "type": "string"
          },
          "profilePictureURL": {
            "type": "string"
          },
          "bio": {
            "type": "string"
          },
          "githubURL": {
            "type": "string"
          },
          "linkedinURL": {
            "type": "string"
          },
          "twitterURL": {
            "type": "string"
          }
        }
      },
      "NoDataResponse": {
        "type": "object",
        "required": [
          "data",
          "message"
        ],
        "properties": {
          "data": {
            "type": null
          },
          "message": {
            "type": "string"
          }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "required": [
          "data",
          "message"
        ],
        "properties": {
          "data": {
            "type": null
          },
          "message": {
            "type": "string"
          }
        }
      }
    }
  }
}
